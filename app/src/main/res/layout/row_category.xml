<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.technzone.bai3.R" />

        <variable
            name="item"
            type="com.technzone.bai3.data.models.category.Category" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="0dp"
        app:strokeWidth="0.75dp"
        app:strokeColor="@color/color_not_valid">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_70sdp"
            android:gravity="center"
            android:orientation="vertical">

            <com.technzone.bai3.ui.base.views.AppImageView
                ivImageErrorPlaceholder="@{R.drawable.ic_category_place_holder}"
                ivImagePlaceholder="@{R.drawable.ic_category_place_holder}"
                ivImageUrl="@{item.icon}"
                ivSrcImageFromResources="@{item.localIcon}"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_10sdp"
                tools:src="@drawable/ic_category_place_holder" />

            <com.technzone.bai3.ui.base.views.AppTextView
                android:id="@+id/tvTitle"
                style="@style/textview_normal_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@{item.name}"
                android:textColor="@color/title_color"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Women" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>